				<version>9.2.19.v20160908</version>
				<configuration>
					<webApp>
						<contextPath>/</contextPath>
					</webApp>
					<scanIntervalSeconds>0</scanIntervalSeconds>
					<httpConnector>
						<port>8882</port>
					</httpConnector>
					<stopKey>live_admin</stopKey>
					<stopPort>9112</stopPort>
				</configuration>
			</plugin>

